               android:textColor="@color/colorPrimaryDark" />

           <LinearLayout
               android:layout_height="30dp"
               android:layout_width="190dp"
               android:orientation="horizontal">

               <EditText
                   android:id="@+id/m4"
                   android:layout_width="100dp"
                   android:layout_height="30dp"
