           android:layout_width="190dp"
           android:background="@color/purple"
           android:orientation="vertical">

           <TextView
               android:id="@+id/teamm4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="TEAM 4"
               android:textSize="45dp"
